@model IEnumerable<MEGATECH.Models.EF.ProductCategory>


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

<style>
    a {
        font-family: Roboto;
    }

    .banner_item:hover {
        transform: scale(1.025); /* Tăng kích thước của item khi hover */
        box-shadow: 0px 0px 15px 0px rgba(0,0,0,0.3); /* Thêm bóng đổ */
    }

    .banner_category {
        max-width: 300px; /* Giới hạn chiều rộng tối đa */
        height: auto; /* Cho phép chiều cao tự động điều chỉnh */
    }
</style>

@if (Model != null && Model.Any())
{

    <div class="banner">
        <div class="container-fluid">
            <div class="row">
                @foreach (var item in Model)
                {

                    <div class="col-md-3">
                        <div class="banner_item align-items-center mb-3" style="background-image: url(@item.Image); border-radius: 15px;">
                            <div class="banner_category">
                                <a href="@item.Alias">@item.Title</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}


